@{
}
@model IEnumerable<string>
<div class="d-grid gap-2">

    @foreach (string pc in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(pc == ViewBag.SelectedProductCategory ? "btn-primary" : "btn-outline-secondary")"  asp-controller="Home" asp-action="Product" asp-route-productCategory="@pc" asp-route-pageNum="1">@pc</a>

    }
</div>
