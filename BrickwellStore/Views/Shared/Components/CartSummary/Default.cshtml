@{
}
@model Cart
<div class="">
    @if (Model.Lines.Count() > 0 )
    {
        <div>
            <b><h2>Cart Summary:</h2><br /></b>
            @foreach (var i in @Model.Lines)
            {
                @i.Product.Name
                <br />
            }
            <b>Your Cart:</b>@Model.Lines.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")

        </div>
    }
 
</div>