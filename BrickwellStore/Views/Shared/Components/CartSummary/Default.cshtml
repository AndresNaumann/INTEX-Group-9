@{
}
@model Cart
<div class="">
    @if (Model.Lines.Count() > 0 )
    {
        <small class="navbar-text">
            <b>Your Cart:</b>@Model.Lines.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()"><i class="fa fa-shopping-cart"</a>
</div>