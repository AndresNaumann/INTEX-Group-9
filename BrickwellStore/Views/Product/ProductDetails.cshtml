@using BrickwellStore.Infrastructure

@model ProductDetailViewModel

<div class="container mt-3">
    <div class="row">
        <!-- Product Photo Column -->
        <div class="col-md-4">
            <a href="javascript:history.back()">
                <img src="~/img/back-icon.svg"/>
            </a>
            <img src="@Model.Product.ImgLink" class="img-fluid" alt="Product Image" />
        </div>

        <div class="col-md-4 text-align-center">
            <h2>@Model.Product.Name</h2>
            <h3>$@Model.Product.Price</h3>
            <form id=@Model.ProductId method="post" asp-page="/Cart">
                <input type="hidden" asp-for="@Model.ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="eighty-width" id="descriptionCartButton">Add to Bag</button>
            </form>
            <br />
            <h4>Description</h4>
            <ul>
                <li>Year: @Model.Product.Year</li>
                <li>Number of Parts: @Model.Product.NumParts</li>
                <li>Primary Color: @Model.Product.PrimaryColor</li>
                <li>Secondary Color: @Model.Product.SecondaryColor</li>
                <li>Description: @Model.Product.Description</li>
                <li>Category: @Model.Product.Category</li>
            </ul>

            
    </div>

        <div class="col-md-4">
            <h4>Similar Sets</h4>
            @foreach (var rec in Model.Recommendations)
            {
                <div class="custom-col mb-3">
                    <partial name="ProductSummary" model="rec" />
                </div>
            }
        </div>

</div>



