@model Product
<a href="javascript:history.back()">
    <img src="~/img/back-icon.svg" />
</a>
<div class="card m-1 p-1">
    <h4>
        @Model.Name
    </h4>
    <center><img src="@Model.ImgLink" style="width:400px" /></center>
    <ul>
        <li>Price: $@Model.Price</li>
        <li>Year: @Model.Year</li>
        <li>Number of Parts: @Model.NumParts</li>
        <li>Primary Color: @Model.PrimaryColor</li>
        <li>Secondary Color: @Model.SecondaryColor</li>
        <li>Description: @Model.Description</li>
        <li>Category: @Model.Category</li>
        <li style="list-style-type:none">
            <a  asp-controller="Product" asp-action="EditProduct" asp-route-id="@Model.ProductId"><img src="~/img/Edit-Icon.svg"/></a>
            <a  asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@Model.ProductId"><img src="~/img/trash-icon.svg"/></a>
        </li>
    </ul>

