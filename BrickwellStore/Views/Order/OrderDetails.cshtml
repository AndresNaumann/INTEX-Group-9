@{
}

@model Order
<br />
<a asp-controller="Admin" asp-action="AdminOrders"><img src="~/img/back-icon.svg"/></a>

<br />
<h4>
    @Model.TransactionId
</h4>
<br />

<p>Customer ID: @Model.CustomerId</p>
<p>Date: @Model.Date</p>
<p>Amount: @Model.Amount</p>
<p>Shipping Address: @Model.ShippingAddress</p>
<p>Transaction Country: @Model.TransactionCountry</p>
<p>Bank: @Model.Bank</p>
<p>Card Type: @Model.CardType</p>
<p>Fraud?: @Model.Fraud</p>
<p>Completed?: @Model.IsCompleted</p>

<br />

<a class="our-custom-button" asp-controller="Product" asp-action="ViewLineItems" asp-route-id="@Model.TransactionId">See Order Items</a>

@if (Model.Fraud == false)
{
    if (Model.IsCompleted == false)
    {
        <a class="btn btn-success" asp-controller="Order" asp-action="CompleteOrder" asp-route-id="@Model.TransactionId">Complete Order</a>
    }
} else
{
    <a class="btn btn-success" asp-controller="Order" asp-action="ApproveOrder" asp-route-id="@Model.TransactionId">Not Fraud</a>
}

<a class="btn btn-danger" asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@Model.TransactionId">Delete</a>


