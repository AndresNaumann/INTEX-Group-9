@model IEnumerable<BrickwellStore.Data.Product> // Adjust the namespace if necessary

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Recommendations Section -->
<div class="recommendations">
    <h2>Recommendations for You</h2>
    @foreach (var product in Model)
    {
        <div class="product">
            <h3>@product.Name</h3>
            <p>@product.Description</p>
            <img src="@product.ImgLink" style="width:100px" />
            <p>@product.Name - $@product.Price</p>
            <!-- Include more details as needed, like an image or a link to the product page -->
        </div>
    }
</div>

<div class="text-center">
    <h2>Decision Tree Fraud Prediction</h2>

    <div class="form-box">
        <form action="/Home/Predict#predictionResult" method="post">
            <div class="form-group"><label>Time:</label><input type="number" name="time"</div>
            <div class="form-group"><label>Amount:</label><input type="number" name="amount"</div>
            <div class="form-group"><label>UK?:</label><input type="number" name="country_of_transaction_United_Kingdom"</div>
            <div class="form-group"><label>Ship UK?:</label><input type="number" name="shipping_address_United_Kingdom"</div>
            <div class="form-group"><input type="submit" value="Predict" /></div>
        </form>
    </div>
    <div class="text-center" id="predictionResult">
        @if (TempData["Prediction"] != null)
        {
            <h2>Prediction: @TempData["Prediction"]</h2>
        }
    </div>
</div>
