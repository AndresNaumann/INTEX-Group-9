@{
}

@* @model ProductsListViewModel *@

@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>


<h1>Users (Admin View)</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
            <th>Member</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><a asp-controller="User" asp-action="UserDetails" asp-route-id="@user.Id">@user.Id</a></td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>stuff</td>
                <td><a class="btn btn-success" asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>