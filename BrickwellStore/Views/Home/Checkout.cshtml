@model BrickwellStore.Pages.CartModel
<div class="card m-1 p-1">
    @if (Model.Cart != null && Model.Cart.Lines != null && Model.Cart.Lines.Any())
    {
        @foreach (var l in Model.Cart.Lines)
        {
            <div class="mb-3">
                <h5>@l.Product.Name</h5>
                <p>Quantity: @l.Quantity</p>
                <p>Price: $@l.Product.Price</p>
                <p>Subtotal: @(l.Quantity * l.Product.Price).ToString("c")</p>
                <img src="@l.Product.ImgLink" alt="@l.Product.Name" style="width:100px" />
            </div>
        }
        <button type="submit" class="btn btn-outline-success btn-sm float-end">Place Order!</button>
    }
