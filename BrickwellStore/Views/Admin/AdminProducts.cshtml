@{
}
<br />

<a class="our-custom-button" asp-controller="Admin" asp-action="AddProduct">Add a New Product</a>

@model IEnumerable<Product>

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td><a asp-controller="Product" asp-action="AdminProductDetails" asp-route-id="@product.ProductId"><img src="@product.ImgLink" style="width:40px" /></a></td>
                <td><a asp-controller="Product" asp-action="AdminProductDetails" asp-route-id="@product.ProductId">@product.ProductId</a></td>
                <td><a asp-controller="Product" asp-action="AdminProductDetails" asp-route-id="@product.ProductId">@product.Name</a></td>
                <td>@product.Price.ToString("C")</td>
                <td><a  asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.ProductId"><img src="~/img/Edit-Icon.svg"/></a></td>
                <td><a  asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.ProductId"><img src="~/img/trash-icon.svg"/></a></td>
            </tr>
        }
    </tbody>
</table>
