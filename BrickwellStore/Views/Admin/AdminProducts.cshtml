@{
}
<br />

<a class="btn btn-primary" asp-controller="Admin" asp-action="AddProduct">Add a New Product</a>

@model IEnumerable<Product>

<h1>Products (Admin View)</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td><a asp-controller="Product" asp-action="AdminProductDetails" asp-route-id="@product.ProductId">@product.Name</a></td>
                <td>@product.Price.ToString("C")</td>
                <td><a class="btn btn-primary" asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.ProductId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.ProductId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
