@model Customer

<a href="javascript:history.back()">
    <img src="~/img/back-icon.svg" />
</a>
<h4>
    @Model.CustomerFirstName @Model.CustomerLastName
</h4>
<ul>
    <li>User ID: @Model.UserId</li>
    <li>Email: @Model.Email</li>
    <li>Phone Number: @Model.Phone</li>
</ul>

