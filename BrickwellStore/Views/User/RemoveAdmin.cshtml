@model Microsoft.AspNetCore.Identity.IdentityUser

<h2>Are you sure you want to remove Admin Privileges from @Model.UserName an Admin?</h2>

<h3>User ID: @Model.Id</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <button class="btn btn-danger" type="submit">Remove Admin Privileges</button>
    <a class="btn btn-info" asp-controller="Admin" asp-action="AdminUsers">Cancel</a>
</form>