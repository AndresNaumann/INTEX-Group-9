@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="centered-container">
    <div class="col-md-4 login-outline position-relative">
        <a href="javascript:history.back()" class="close-icon" aria-label="Close">
            <i class="fas fa-times"></i>
        </a>
        <h1>You are about to logout</h1>
        <br />

        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-primary">Continue</button>
                </form>
            }
            else
            {
                <p>You have successfully logged out of the application.</p>
            }
        }
    </div>
</div>
